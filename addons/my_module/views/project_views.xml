<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="project_view_form" model="ir.ui.view">
        <field name="name">project.form</field>
        <field name="model">project</field>
        <field name="arch" type="xml">
            <form string="Project">
                <header>
                    <button name="action_approve" string="Approve" type="object"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="date_from"/>
                            <field name="date_to"/>
                        </group>
                        <group>
                            <field name="state"/>
                            <field name="user_id"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="project_view_tree" model="ir.ui.view">
        <field name="name">project.tree</field>
        <field name="model">project</field>
        <field name="arch" type="xml">
            <tree string="Proejct" decoration-danger="state == 'rejected'">
                <field name="state" invisible="1"/>
                <field name="name"/>
                <field name="date_to"/>
            </tree>
        </field>
    </record>

    <record id="action_project" model="ir.actions.act_window">
        <field name="name">Projects</field>
        <field name="res_model">project</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">tree,form,pivot</field>
        <!-- <field name="domain">[('root', '=', True)]</field> -->
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Set up your projects
            </p><p>
                Blablabla my projects
            </p>
        </field>
    </record>

    <!-- Second Level Menu -->
    <menuitem id="menu_my_module_project" name="Projects" parent="menu_my_module_root" action="action_project"/>
</odoo>
